<p id="notice"><%= notice %></p>

<h1>Challenge Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenge_types.each do |challenge_type| %>
      <tr>
        <td><%= challenge_type.name %></td>
        <td><%= link_to 'Show', challenge_type %></td>
        <td><%= link_to 'Edit', edit_challenge_type_path(challenge_type) %></td>
        <td><%= link_to 'Destroy', challenge_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

